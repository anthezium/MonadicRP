--Flag Tutorial
--  Description: Compile with pandoc preprocessor
--  Default:     False

--Source-Repository head
--    Type: git
--    Location: git@github.com:sdiehl/kaleidoscope.git

library 
  exposed-modules:         RP
  default-language:        Haskell2010
  hs-source-dirs:          src
  ghc-options:
    -threaded
    "-with-rtsopts=-N"
  build-depends:       
      atomic-primops
    , base                 >= 4.6
    , containers           >= 0.5.5.1
    , mtl
    , transformers


